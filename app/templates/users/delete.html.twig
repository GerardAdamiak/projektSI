{% block title %}
    {{ 'Delete User' }} {{ user.id|default('') }}
{% endblock %}

{% block body %}
    <h1>{{ 'Delete User' }} {{ user.id|default('') }}</h1>
    {{ form_start(form, { method: 'DELETE', action: url('user_delete', {id: user.id}) }) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'Delete' }}" class="btn btn-danger" />
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('user_index') }}" class="btn btn-link">
            {{ 'Back to list' }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}