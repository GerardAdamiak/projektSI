{% block body %}
    <h1>{{ 'Create User' }}</h1>
    {{ form_start(form, { method: 'POST', action: url('user_create') }) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'Save' }}" class="btn btn-primary"/>
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ path('user_index') }}" class="btn btn-link">
            {{ 'Back to list' }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}

