{% extends 'base.html.twig' %}

{% block title %}
    Post List
{% endblock %}

{% block body %}
    <h1>Post List</h1>
    <div class="row mb-3">
        <div class="col">
            <a href="{{ path('post_create') }}" class="btn btn-primary">Add new</a>
        </div>
    </div>
    {% if pagination is defined and pagination.items|length %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'ID', 'post.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Created At', 'post.createdAt') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Updated At', 'post.updatedAt') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Title', 'post.title') }}</th>
                <th>Category</th>
                <th>{{ knp_pagination_sortable(pagination, 'Post Date', 'post.postDate') }}</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for post in pagination.items %}
                <tr>
                    <td>{{ post.id }}</td>
                    <td>{{ post.createdAt|date('Y/m/d') }}</td>
                    <td>{{ post.updatedAt|date('Y/m/d') }}</td>
                    <td>{{ post.title }}</td>
                    <td>
                        <a class="btn btn-outline-primary" href="{{ path('post_index', {'categoryId' : post.category.id}) }}" title="{{ post.category.title }}">
                            {{ post.category.title }}
                        </a>
                    </td>
                    <td>{{ post.postDate|date('Y/m/d H:i') }}</td>
                    <td>
                        <a href="{{ path('post_show', {id: post.id}) }}" title="Show" class="btn btn-info">Show</a>
                        <a href="{{ path('comment_index', {id: post.id}) }}" title="Comment" class="btn btn-info">Comment</a>
                        {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('post_edit', {id: post.id}) }}" title="Edit" class="btn btn-warning">Edit</a>
                        <a href="{{ path('post_delete', {id: post.id}) }}" title="Delete" class="btn btn-danger">Delete</a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>
    {% else %}
        {% include 'default/_single_alert_message.html.twig' with {
            type: 'warning',
            message: 'No posts found.'
        } %}
    {% endif %}
{% endblock %}