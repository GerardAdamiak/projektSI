{% extends 'base.html.twig' %}

{% block title %}
    {{ 'Welcome to Personal Information Management Application'|trans }}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="title_of_page">
            <h1>{{ 'BlogGer'|trans }}</h1>
        </div>

        <div class="navigation">
            <ul>
                <li><a href="{{ path('post_index') }}" class="btn btn-outline-primary">{{ 'Posts'|trans }}</a></li>
                <li><a href="{{ path('category_index') }}" class="btn btn-outline-primary">{{ 'Categories'|trans }}</a></li>
                {% if is_granted('ROLE_ADMIN') %}
                <li><a href="{{ path('user_index') }}" class="btn btn-outline-primary">{{ 'Users'|trans }}</a></li>
                {% endif %}
            </ul>
        </div>
    </div>
{% endblock %}
